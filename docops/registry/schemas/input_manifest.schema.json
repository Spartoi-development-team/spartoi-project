{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["task_id", "created_at", "inputs"],
  "properties": {
    "task_id": {"type": "string", "minLength": 6},
    "created_at": {"type": "string", "minLength": 10},
    "inputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "path", "sha256"],
        "properties": {
          "name": {"type": "string"},
          "path": {"type": "string"},
          "sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"}
        }
      }
    }
  },
  "additionalProperties": false
}
